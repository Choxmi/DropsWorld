<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/story_list_container"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/we"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">

        <com.facebook.drawee.view.DraweeView
            android:id="@+id/album_dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:placeholderImage="@drawable/demo_holder" />

        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="Tour de Europe"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addtoalbum_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/album_title"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/delete"
            android:paddingBottom="15dp" />

        <Button
            android:id="@+id/delete_album_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="95dp"
            android:layout_toEndOf="@+id/album_title"
            android:layout_weight="1"
            android:background="@drawable/add_to_album"
            android:paddingBottom="15dp" />
    </RelativeLayout>

</LinearLayout>