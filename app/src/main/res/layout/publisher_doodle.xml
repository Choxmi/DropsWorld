<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.choxmi.dropsworld.dropsworld.Doodle.PaintView
        android:id="@+id/doodle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/btnContainer"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:animateLayoutChanges="true">

        <ImageButton
            android:id="@+id/btnBrush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_brush" />

        <ImageButton
            android:id="@+id/btnEraser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnBrush"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_eraser" />

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnBackground"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/btnBackground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnEraser"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_background" />

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnSave"
            android:layout_marginTop="221dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/ic_back" />

    </RelativeLayout>

</RelativeLayout>